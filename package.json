{
    "name": "@aitofy/ai-chat",
    "version": "0.1.0",
    "description": "Lightweight Chat/LLM SDK - OpenAI, Claude, Gemini, Grok, Groq in one unified API. Zero dependencies, Result-based error handling.",
    "keywords": [
        "ai",
        "ai-sdk",
        "openai",
        "chatgpt",
        "gpt-4",
        "gpt-5",
        "claude",
        "anthropic",
        "gemini",
        "google-ai",
        "grok",
        "xai",
        "groq",
        "deepseek",
        "llm",
        "llm-api",
        "chat",
        "chat-api",
        "unified-api",
        "multi-provider",
        "sdk",
        "typescript",
        "zero-dependency",
        "cost-tracking",
        "streaming",
        "function-calling"
    ],
    "author": "Aitofy <hello@aitofy.dev>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aitofy-dev/ai-chat.git"
    },
    "homepage": "https://aitofy.dev/ai-chat",
    "bugs": {
        "url": "https://github.com/aitofy-dev/ai-chat/issues"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "llms.txt"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "vitest run src/index.test.ts",
        "test:run": "vitest run src/index.test.ts",
        "test:integration": "vitest run src/integration.test.ts",
        "test:all": "vitest run",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "dotenv": "^17.2.3",
        "tsup": "^8.0.1",
        "tsx": "^4.21.0",
        "typescript": "^5.3.0",
        "vitest": "^1.1.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "sideEffects": false
}